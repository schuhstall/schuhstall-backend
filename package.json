{
  "name": "backend",
  "version": "0.0.1",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "prisma generate && tsoa spec-and-routes && tsc",
    "release": "prisma migrate deploy",
    "start": "yarn release && node dist/server.js",
    "migrate": "npx prisma migrate dev --preview-feature",
    "seed": "npx prisma db seed",
    "studio": "npx prisma studio",
    "update-prisma": "npx prisma generate && npx prisma db push",
    "swagger": "tsoa spec",
    "routes": "tsoa routes",
    "docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:up:migrate": "yarn docker:up && dotenv -e .env.test prisma migrate deploy",
    "docker:down": "docker-compose -f docker-compose.test.yml down",
    "test:integration": "yarn docker:up && sleep 3 && prisma migrate deploy && ((jest --silent --runInBand --config jest.config.json --coverage && istanbul-badges-readme --silent) || yarn docker:down) && yarn docker:down",
    "test:integration:ci": "yarn docker:up && sleep 3 && prisma migrate deploy && jest --silent --runInBand --config jest.config.json && yarn docker:down",
    "test": "yarn run lint && dotenv -e .env.test yarn test:integration",
    "test:ci": "yarn run lint && dotenv -e .env.test yarn test:integration:ci",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx"
  },
  "prisma": {
    "seed": "ts-node ./src/prisma/seed.ts",
    "schema": "./src/prisma/schema.prisma"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node src/server.ts"
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "axios": "^1.2.2",
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "prisma": "^4.8.1",
    "swagger-ui-express": "^4.6.0",
    "tsoa": "^5.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@jonny/eslint-config": "^3.0.269",
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.15",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.2.5",
    "@types/lodash": "^4.14.191",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.32.0",
    "eslint-plugin-import": "^2.27.4",
    "istanbul-badges-readme": "^1.8.4",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "jest-ts-auto-mock": "^2.1.0",
    "prettier": "^2.8.3",
    "prettier-eslint": "^15.0.1",
    "prettier-plugin-organize-imports": "^3.2.2",
    "ts-auto-mock": "^3.6.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.4"
  }
}
